cabal-version:      2.4
name:               uefi
version:            0.1.0.0
extra-source-files: CHANGELOG.md

executable uefi
    build-depends:    base
    main-is:          Main.hs
    hs-source-dirs:   src
    default-language: Haskell2010
    ghc-options:         -Wall -Werror -haddock -threaded -rtsopts -with-rtsopts=-N
    ghcjs-options:       -dedupe
