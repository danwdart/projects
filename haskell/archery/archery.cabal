test-suite test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  default-language:    GHC2021
  default-extensions:  DerivingStrategies, UnicodeSyntax, NoGeneralizedNewtypeDeriving
  build-depends:       base >= 4.18.0.0 && < 5
                     , aeson
                     , archery
                     , hspec
                     , QuickCheck
