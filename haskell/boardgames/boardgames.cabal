executable sudoku
  import: shared-properties
  main-is:             sudoku.hs
  build-depends:       base >= 4.17 && < 5, containers, extra, lattices, vector

test-suite boardgames-test
  import: shared-properties
  hs-source-dirs:      test
  type:                exitcode-stdio-1.0
  main-is:             Spec.hs
  other-modules:
    Game.BounceSpec
  -- build-tool-depends:
  --   hspec-discover:hspec-discover == 2.*
  default-language:    GHC2021
  default-extensions:  DerivingStrategies, UnicodeSyntax
  build-depends:
      base >= 4.17 && < 5
    , boardgames
    , hspec
    -- , hspec-core
    -- , hspec-expectations
    , QuickCheck