test-suite boardgames-test
  import: shared-properties
  hs-source-dirs:      test
  type:                exitcode-stdio-1.0
  main-is:             Spec.hs
  other-modules:
    Game.BounceSpec
  build-tool-depends:
    hspec-discover:hspec-discover
  build-depends:
      base >= 4.15 && < 5
    , boardgames
    , hspec
    , hspec-core
    , hspec-expectations
    , QuickCheck